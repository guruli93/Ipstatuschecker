﻿<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IP Checker</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }

        .container {
            width:100%;
            margin: auto;
        }

        .user-name-wrapper {
           display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: initial;
        }

        .user-box {

            padding: 10px;
            border: 2px solid #ddd;
            background-color: #f5f5f5;
            margin-top: 20px;
        }

        .user-name {
            font-size: 24px;
            color: #333;
        }

        .ip-list,
        .device-list {
            margin-top: 30px;
            text-align: left;
        }

        .item {
            display: flex;
            justify-content: space-between;
            padding: 10px;
            border: 1px solid #ddd;
            margin-bottom: 10px;
            background-color: #f9f9f9;
        }

        .online {
            color: green;
        }

        .offline {
            color: red;
        }

        .label {
            flex: 1;
        }

        button {
            padding: 5px 10px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <div class="container">
 

        @foreach (var user in Model)
        {
            <div class="user-box">
              
                <div class="ip-list">
                  <div class="user-name-wrapper">
                    
                    <p class="user-name">@user.Name</p>
                </div>
@foreach (var ip in user.IpStatuses)
{
    <div class="item">
        <div>
            <p class="label"><strong>IP Address:</strong> @ip.IpAddress</p>

            @{
                var devices = user.Devices as IEnumerable<Ipstatuschecker.Dto.DeviceDto>;
                var filteredDevices = devices?
                    .Where(d => d.IpStatusId == ip.Id) 
                    .ToList();

                if (filteredDevices != null && filteredDevices.Any())
                {
                    foreach (var device in filteredDevices)
                    {
                        <p class="label"><strong>Device:</strong> @device.DeviceNames</p>
                    }
                }
                else
                {
                    <span>No devices available.</span>
                }
            }
        </div>

        <p class="label">Status: <span class="@ip.Status.ToLower()">@ip.Status</span></p>
        <button onclick="pingIp('@ip.IpAddress')">Ping IP</button>
    </div>
}



